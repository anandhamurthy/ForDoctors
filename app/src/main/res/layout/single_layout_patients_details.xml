<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded_trans"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:src="@drawable/more"
                android:layout_margin="5dp"
                android:id="@+id/more"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_time_layout"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/quicksand_medium"
                    android:id="@+id/date_text"
                    android:text="Date "
                    android:layout_weight="0"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/timestamp"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reason_layout"
                android:layout_below="@+id/date_time_layout"
                android:orientation="vertical">


                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/quicksand_medium"
                    android:id="@+id/reason_text"
                    android:text="Patient's Name "
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/name"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reason_layout"
                android:id="@+id/phone_number_layout"
                android:orientation="vertical">


                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/quicksand_medium"
                    android:id="@+id/email_text"
                    android:text="Patient's Phone Number"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/phone_number"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/doctor_name_layout"
                android:layout_below="@+id/phone_number_layout"
                android:orientation="vertical">


                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/quicksand_medium"
                    android:id="@+id/doctor_name_text"
                    android:text="Patient's Details "
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/details"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_name_layout"
                android:id="@+id/address_layout"
                android:orientation="vertical">


                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/quicksand_medium"
                    android:id="@+id/doctor_email_text"
                    android:text="Patient's Address "
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/location"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>